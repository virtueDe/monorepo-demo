{
  "compilerOptions": {
    "target": "ESNext",
    "lib": ["ESNext", "DOM"],
    "useDefineForClassFields": true,
    "rootDir": ".",
    "module": "ESNext",
    "moduleResolution": "Node",
    "paths": {
      "@/*": ["./src/*"],
      "@@/*": ["./*"]
    },
    "resolveJsonModule": true,
    "types": ["vite/client", "node"],
    "strict": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true, // 只输出声明文件(ts 产物)
    "declaration": true, // 自动生成声明文件
    "declarationDir": "dist",
    "emitDeclarationOnly": true,
    // "noEmit": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true // 声明文件生成的目录
  },
  "include": ["src"]
  // "exclude": ["**/*.test.ts", "node_modules", "test/**", ".history/**"]
}
